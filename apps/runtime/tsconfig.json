    { "path": "../../packages/core" },
    { "path": "../../packages/ipc" },
    { "path": "../../packages/profiles" },
    { "path": "../../packages/logging" },
    { "path": "../../packages/trust" },
    { "path": "../../packages/tools" },
    { "path": "../../packages/llm" },
    { "path": "../../packages/agent" },
    { "path": "../../packages/memory" }
  ]
}
